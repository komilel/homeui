{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Events Configuration",
    "description": "For internal use, edit with caution",
    "properties": {
        "events": { "type": "array" },
        "triggeredEvents": { "type": "array" }
